{
  "entities": {
    "UserProfile": {
      "title": "User Profile",
      "description": "Represents a user's profile in the system.",
      "type": "object",
      "properties": {
        "uid": {
          "type": "string",
          "description": "The user's unique ID from Firebase Auth."
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "The user's email address."
        },
        "displayName": {
          "type": "string",
          "description": "The user's display name."
        },
        "photoURL": {
          "type": "string",
          "format": "uri",
          "description": "URL of the user's profile picture."
        },
        "companyId": {
          "type": "string",
          "description": "The ID of the company the user belongs to."
        },
        "roles": {
          "type": "array",
          "description": "User roles within the company.",
          "items": {
            "type": "string",
            "enum": [
              "admin",
              "employee",
              "scrum-master"
            ]
          }
        },
        "status": {
          "type": "string",
          "description": "The status of the user account.",
          "enum": [
            "active",
            "pending"
          ]
        }
      },
      "required": [
        "uid",
        "email"
      ]
    },
    "Company": {
      "title": "Company",
      "description": "Represents a company or organization in the system.",
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "description": "The name of the company."
        },
        "ownerId": {
          "type": "string",
          "description": "The UID of the user who owns the company."
        },
        "creationYear": {
          "type": "number",
          "description": "The year the company was created."
        },
        "country": {
          "type": "string",
          "description": "The country where the company is based."
        },
        "currency": {
          "type": "string",
          "description": "The currency used by the company."
        },
        "language": {
          "type": "string",
          "description": "The primary language for the company."
        },
        "createdAt": {
          "type": "string",
          "format": "date-time",
          "description": "The timestamp when the company was created."
        },
        "logoUrl": {
          "type": "string",
          "format": "uri",
          "description": "URL of the company logo, stored as a data URL."
        }
      },
      "required": [
        "name",
        "ownerId",
        "creationYear",
        "country",
        "currency",
        "language"
      ]
    },
    "Project": {
      "title": "Project",
      "description": "Represents a project within a company.",
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "goals": {
          "type": "string"
        },
        "budget": {
          "type": "number"
        },
        "startDate": {
          "type": "string",
          "format": "date"
        },
        "endDate": {
          "type": "string",
          "format": "date"
        },
        "status": {
          "type": "string",
          "enum": [
            "Pas commencé",
            "En cours",
            "Terminé",
            "En attente"
          ]
        },
        "methodology": {
          "type": "string",
          "enum": [
            "Agile",
            "Cascade",
            "Cycle en V",
            "Hybride"
          ]
        },
        "tasks": {
          "type": "array",
          "items": {
            "$ref": "#/entities/Task"
          }
        },
        "expenses": {
          "type": "array",
          "items": {
            "$ref": "#/entities/Expense"
          }
        },
        "companyId": {
          "type": "string"
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        }
      },
      "required": [
        "name",
        "companyId",
        "createdAt"
      ]
    },
    "Task": {
      "title": "Task",
      "description": "A task within a project.",
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "completed": {
          "type": "boolean"
        },
        "dueDate": {
          "type": "string",
          "format": "date"
        },
        "assigneeId": {
          "type": "string",
          "description": "The UID of the user assigned to this task."
        },
        "parentId": {
          "type": "string",
          "description": "The ID of the parent task, if this is a subtask."
        }
      },
      "required": [
        "id",
        "name",
        "completed"
      ]
    },
    "Expense": {
      "title": "Expense",
      "description": "An expense related to a project.",
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "item": {
          "type": "string"
        },
        "amount": {
          "type": "number"
        },
        "date": {
          "type": "string",
          "format": "date"
        }
      },
      "required": [
        "id",
        "item",
        "amount",
        "date"
      ]
    },
    "Deliverable": {
      "title": "Deliverable",
      "description": "Represents a project deliverable which time can be logged against.",
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "description": "The name of the deliverable."
        },
        "projectId": {
          "type": "string",
          "description": "The ID of the project this deliverable belongs to."
        },
        "companyId": {
          "type": "string",
          "description": "The ID of the company."
        },
        "status": {
          "type": "string",
          "enum": [
            "À faire",
            "En cours",
            "En revue",
            "Livré",
            "Bloqué"
          ],
          "description": "The current status of the deliverable."
        },
        "type": {
          "type": "string",
          "description": "The type of deliverable (e.g., Maquette, Rapport, Feature)."
        },
        "sprintNumber": {
          "type": "number",
          "description": "The sprint number for Agile projects."
        },
        "projectPhase": {
          "type": "string",
          "description": "The project phase for Waterfall projects."
        },
        "acceptanceCriteria": {
          "type": "string",
          "description": "The criteria for accepting the deliverable."
        },
        "validationStatus": {
          "type": "string",
          "enum": [
            "En attente",
            "Validé",
            "Rejeté"
          ],
          "description": "The validation status of the deliverable."
        },
        "imageUrls": {
          "type": "array",
          "items": {
            "type": "string",
            "format": "uri"
          },
          "description": "URLs of images associated with the deliverable."
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        }
      },
      "required": [
        "name",
        "projectId",
        "companyId",
        "status",
        "createdAt"
      ]
    },
    "Timesheet": {
      "title": "Timesheet",
      "description": "Represents a single time entry for a user on a project.",
      "type": "object",
      "properties": {
        "userId": {
          "type": "string",
          "description": "The ID of the user who logged the time."
        },
        "projectId": {
          "type": "string",
          "description": "The ID of the project."
        },
        "taskId": {
          "type": "string",
          "description": "The ID of the specific task worked on."
        },
        "deliverableId": {
          "type": "string",
          "description": "The ID of the deliverable this time entry contributes to."
        },
        "date": {
          "type": "string",
          "format": "date",
          "description": "The date the work was performed."
        },
        "duration": {
          "type": "number",
          "description": "Duration in hours."
        },
        "description": {
          "type": "string",
          "description": "A short description of the work done."
        },
        "taskType": {
          "type": "string",
          "enum": [
            "Développement",
            "Test",
            "Réunion",
            "Documentation",
            "Support / Maintenance"
          ]
        },
        "status": {
          "type": "string",
          "description": "The status of the time entry itself (e.g. Billed, Pending)",
          "enum": [
            "Validé",
            "En attente"
          ]
        },
        "companyId": {
          "type": "string",
          "description": "The ID of the company."
        },
        "billable": {
          "type": "boolean",
          "description": "Indicates if the time entry is billable."
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        }
      },
      "required": [
        "userId",
        "projectId",
        "date",
        "duration",
        "description",
        "taskType",
        "companyId",
        "createdAt"
      ]
    }
  },
  "auth": {
    "providers": [
      "google.com",
      "password"
    ]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": {
        "$ref": "#/entities/UserProfile"
      },
      "description": "Stores public information about a user."
    },
    "/companies/{companyId}": {
      "schema": {
        "$ref": "#/entities/Company"
      },
      "description": "Stores information about a company."
    },
    "/companies/{companyId}/projects/{projectId}": {
      "schema": {
        "$ref": "#/entities/Project"
      },
      "description": "Stores projects for a specific company."
    },
    "/companies/{companyId}/timesheets/{timesheetId}": {
      "schema": {
        "$ref": "#/entities/Timesheet"
      },
      "description": "Stores timesheet entries for a company."
    },
    "/companies/{companyId}/deliverables/{deliverableId}": {
      "schema": {
        "$ref": "#/entities/Deliverable"
      },
      "description": "Stores project deliverables for a company."
    }
  }
}
