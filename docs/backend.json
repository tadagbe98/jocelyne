{
  "entities": {
    "UserProfile": {
      "title": "User Profile",
      "description": "Represents a user's profile in the system.",
      "type": "object",
      "properties": {
        "uid": {
          "type": "string",
          "description": "The user's unique ID from Firebase Auth."
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "The user's email address."
        },
        "displayName": {
          "type": "string",
          "description": "The user's display name."
        },
        "photoURL": {
          "type": "string",
          "format": "uri",
          "description": "URL of the user's profile picture."
        },
        "companyId": {
          "type": "string",
          "description": "The ID of the company the user belongs to."
        },
        "roles": {
          "type": "array",
          "description": "User roles within the company.",
          "items": {
            "type": "string",
            "enum": [
              "admin",
              "employee",
              "scrum-master"
            ]
          }
        },
        "status": {
          "type": "string",
          "description": "The status of the user account.",
          "enum": [
            "active",
            "pending"
          ]
        }
      },
      "required": [
        "uid",
        "email"
      ]
    },
    "Company": {
      "title": "Company",
      "description": "Represents a company or organization in the system.",
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "description": "The name of the company."
        },
        "ownerId": {
          "type": "string",
          "description": "The UID of the user who owns the company."
        },
        "creationYear": {
          "type": "number",
          "description": "The year the company was created."
        },
        "country": {
          "type": "string",
          "description": "The country where the company is based."
        },
        "currency": {
          "type": "string",
          "description": "The currency used by the company."
        },
        "language": {
          "type": "string",
          "description": "The primary language for the company."
        },
        "createdAt": {
          "type": "string",
          "format": "date-time",
          "description": "The timestamp when the company was created."
        },
        "logoUrl": {
          "type": "string",
          "format": "uri",
          "description": "URL of the company logo, stored as a data URL."
        }
      },
      "required": [
        "name",
        "ownerId",
        "creationYear",
        "country",
        "currency",
        "language"
      ]
    },
    "Project": {
      "title": "Project",
      "description": "Represents a project within a company.",
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "goals": {
          "type": "string"
        },
        "budget": {
          "type": "number"
        },
        "startDate": {
          "type": "string",
          "format": "date"
        },
        "endDate": {
          "type": "string",
          "format": "date"
        },
        "status": {
          "type": "string",
          "enum": [
            "Pas commencé",
            "En cours",
            "Terminé",
            "En attente"
          ]
        },
        "methodology": {
          "type": "string",
          "enum": [
            "Agile",
            "Cascade",
            "Cycle en V",
            "Hybride"
          ]
        },
        "tasks": {
          "type": "array",
          "items": {
            "$ref": "#/entities/Task"
          }
        },
        "expenses": {
          "type": "array",
          "items": {
            "$ref": "#/entities/Expense"
          }
        },
        "companyId": {
          "type": "string"
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        }
      },
      "required": [
        "name",
        "companyId",
        "createdAt"
      ]
    },
    "Task": {
      "title": "Task",
      "description": "A task within a project.",
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "completed": {
          "type": "boolean"
        },
        "dueDate": {
          "type": "string",
          "format": "date"
        },
        "assigneeId": {
          "type": "string",
          "description": "The UID of the user assigned to this task."
        }
      },
      "required": [
        "id",
        "name",
        "completed",
        "dueDate"
      ]
    },
    "Expense": {
      "title": "Expense",
      "description": "An expense related to a project.",
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "item": {
          "type": "string"
        },
        "amount": {
          "type": "number"
        },
        "date": {
          "type": "string",
          "format": "date"
        }
      },
      "required": [
        "id",
        "item",
        "amount",
        "date"
      ]
    },
    "Timesheet": {
      "title": "Timesheet",
      "description": "Represents a single time entry for a user on a project task.",
      "type": "object",
      "properties": {
        "userId": {
          "type": "string",
          "description": "The ID of the user who logged the time."
        },
        "projectId": {
          "type": "string",
          "description": "The ID of the project."
        },
        "taskId": {
          "type": "string",
          "description": "The ID of the task."
        },
        "date": {
          "type": "string",
          "format": "date",
          "description": "The date the work was performed."
        },
        "startTime": {
          "type": "string",
          "format": "time"
        },
        "endTime": {
          "type": "string",
          "format": "time"
        },
        "duration": {
          "type": "number",
          "description": "Duration in hours."
        },
        "notes": {
          "type": "string",
          "description": "Optional notes about the work."
        },
        "companyId": {
          "type": "string",
          "description": "The ID of the company."
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        },
        "workType": {
          "type": "string",
          "enum": [
            "Développement",
            "Test",
            "Réunion",
            "Documentation",
            "Support / Maintenance"
          ]
        },
        "status": {
          "type": "string",
          "enum": [
            "En cours",
            "Terminé",
            "Bloqué"
          ]
        },
        "agileFramework": {
          "type": "string",
          "enum": [
            "Scrum",
            "Kanban",
            "XP"
          ]
        },
        "sprintNumber": {
          "type": "number"
        },
        "userStoryId": {
          "type": "string"
        },
        "agileTaskType": {
          "type": "string",
          "enum": [
            "Feature",
            "Bug",
            "Refactoring",
            "Spike"
          ]
        },
        "estimatedStoryPoints": {
          "type": "number"
        },
        "isBlocked": {
          "type": "boolean"
        },
        "blockerComment": {
          "type": "string"
        },
        "projectPhase": {
          "type": "string",
          "enum": [
            "Analyse des besoins",
            "Conception",
            "Développement",
            "Tests",
            "Déploiement",
            "Maintenance"
          ]
        },
        "wbsCode": {
          "type": "string"
        },
        "deliverableDescription": {
          "type": "string",
          "description": "A description of the work delivered."
        },
        "deliverableImageUrls": {
          "type": "array",
          "description": "Image files of the deliverable, stored as data URLs.",
          "items": {
            "type": "string",
            "format": "uri"
          }
        },
        "validationStatus": {
          "type": "string",
          "enum": [
            "En attente",
            "Validé",
            "Rejeté"
          ]
        },
        "developmentPhase": {
          "type": "string",
          "enum": [
            "Spécification",
            "Conception",
            "Implémentation"
          ]
        },
        "associatedTestPhase": {
          "type": "string",
          "enum": [
            "Test unitaire",
            "Test d’intégration",
            "Test système",
            "Test d’acceptation"
          ]
        },
        "testResult": {
          "type": "string",
          "enum": [
            "Conforme",
            "Non conforme"
          ]
        },
        "documentReference": {
          "type": "string"
        },
        "iterationGoal": {
          "type": "string"
        },
        "kpiTracked": {
          "type": "string"
        },
        "isBillable": {
          "type": "boolean"
        },
        "hourlyRate": {
          "type": "number"
        },
        "calculatedCost": {
          "type": "number"
        },
        "approvalStatus": {
          "type": "string"
        },
        "managerComments": {
          "type": "string"
        }
      },
      "required": [
        "userId",
        "projectId",
        "date",
        "duration",
        "companyId",
        "createdAt"
      ]
    }
  },
  "auth": {
    "providers": [
      "google.com",
      "password"
    ]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": {
        "$ref": "#/entities/UserProfile"
      },
      "description": "Stores public information about a user."
    },
    "/companies/{companyId}": {
      "schema": {
        "$ref": "#/entities/Company"
      },
      "description": "Stores information about a company."
    },
    "/companies/{companyId}/projects/{projectId}": {
      "schema": {
        "$ref": "#/entities/Project"
      },
      "description": "Stores projects for a specific company."
    },
    "/companies/{companyId}/timesheets/{timesheetId}": {
      "schema": {
        "$ref": "#/entities/Timesheet"
      },
      "description": "Stores timesheet entries for a company."
    }
  }
}
