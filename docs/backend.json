{
  "entities": {
    "UserProfile": {
      "title": "User Profile",
      "description": "Represents a user's profile in the system.",
      "type": "object",
      "properties": {
        "uid": {
          "type": "string",
          "description": "The user's unique ID from Firebase Auth."
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "The user's email address."
        },
        "displayName": {
          "type": "string",
          "description": "The user's display name."
        },
        "photoURL": {
          "type": "string",
          "format": "uri",
          "description": "URL of the user's profile picture."
        },
        "companyId": {
          "type": "string",
          "description": "The ID of the company the user belongs to."
        },
        "roles": {
          "type": "array",
          "description": "User roles within the company.",
          "items": {
            "type": "string",
            "enum": [
              "admin",
              "employee"
            ]
          }
        }
      },
      "required": [
        "uid",
        "email"
      ]
    },
    "Company": {
      "title": "Company",
      "description": "Represents a company or organization in the system.",
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "description": "The name of the company."
        },
        "ownerId": {
          "type": "string",
          "description": "The UID of the user who owns the company."
        },
        "creationYear": {
          "type": "number",
          "description": "The year the company was created."
        },
        "country": {
          "type": "string",
          "description": "The country where the company is based."
        },
        "currency": {
          "type": "string",
          "description": "The currency used by the company."
        },
        "language": {
          "type": "string",
          "description": "The primary language for the company."
        },
        "createdAt": {
          "type": "string",
          "format": "date-time",
          "description": "The timestamp when the company was created."
        }
      },
      "required": [
        "name",
        "ownerId",
        "creationYear",
        "country",
        "currency",
        "language"
      ]
    },
    "Project": {
      "title": "Project",
      "description": "Represents a project within a company.",
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "goals": {
          "type": "string"
        },
        "budget": {
          "type": "number"
        },
        "startDate": {
          "type": "string",
          "format": "date"
        },
        "endDate": {
          "type": "string",
          "format": "date"
        },
        "status": {
          "type": "string",
          "enum": [
            "Pas commencé",
            "En cours",
            "Terminé",
            "En attente"
          ]
        },
        "methodology": {
          "type": "string",
          "enum": [
            "Agile",
            "Cascade",
            "Hybride"
          ]
        },
        "tasks": {
          "type": "array",
          "items": {
            "$ref": "#/entities/Task"
          }
        },
        "expenses": {
          "type": "array",
          "items": {
            "$ref": "#/entities/Expense"
          }
        },
        "companyId": {
          "type": "string"
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        }
      },
      "required": [
        "name",
        "companyId",
        "createdAt"
      ]
    },
    "Task": {
      "title": "Task",
      "description": "A task within a project.",
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "completed": {
          "type": "boolean"
        },
        "dueDate": {
          "type": "string",
          "format": "date"
        }
      },
      "required": [
        "id",
        "name",
        "completed",
        "dueDate"
      ]
    },
    "Expense": {
      "title": "Expense",
      "description": "An expense related to a project.",
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "item": {
          "type": "string"
        },
        "amount": {
          "type": "number"
        },
        "date": {
          "type": "string",
          "format": "date"
        }
      },
      "required": [
        "id",
        "item",
        "amount",
        "date"
      ]
    }
  },
  "auth": {
    "providers": [
      "google.com",
      "password"
    ]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": {
        "$ref": "#/entities/UserProfile"
      },
      "description": "Stores public information about a user."
    },
    "/companies/{companyId}": {
      "schema": {
        "$ref": "#/entities/Company"
      },
      "description": "Stores information about a company."
    },
    "/companies/{companyId}/projects/{projectId}": {
      "schema": {
        "$ref": "#/entities/Project"
      },
      "description": "Stores projects for a specific company."
    }
  }
}
